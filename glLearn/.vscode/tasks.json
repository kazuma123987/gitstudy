{
    "tasks": [
        {
            "type": "shell",
            "label": "clean",
            "command": [
                "clear;",
                "del 'build/*' -recurse;"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Debug",
            "command": [
                "clear;",
                "cmake -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE=Debug ..;",
                "cmake --build . -j --target all;"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Release",
            "command": [
                "clear;",
                "cmake -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE=Release ..;",
                "make -j;"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "MinSizeRel",
            "command": [
                "clear;",
                "cmake -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE=MinSizeRel ..;",
                "make -j;"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "RelWithDebInfo",
            "command": [
                "clear;",
                "cmake -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE=RelWithDebInfo ..;",
                "make -j;"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run",
            "command": "./main;",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}