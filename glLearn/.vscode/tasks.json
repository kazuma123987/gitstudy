{
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": [
                "clear;",
                "del 'build/*' -recurse;",
                "cd build;",
                "cmake -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE=Debug ..;",
                "make -j;"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "run",
            "command": "./main",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cmake"
        },
    ],
    "version": "2.0.0"
}